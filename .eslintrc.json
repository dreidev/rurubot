{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["eslint:recommended", "dreidev"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "camelcase": [0, {"properties": "never"}],
    "require-jsdoc": 0,
    "new-cap": 1,
    "no-console": 0,
    "no-invalid-this": 0,
    "max-len": [2, {
      "code": 120,
      "tabWidth": 2,
      "ignoreUrls": true
    }]
  }
}
